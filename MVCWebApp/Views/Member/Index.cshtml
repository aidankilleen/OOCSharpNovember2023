@using MemberDao;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>@ViewBag.Title</h1>

@ViewBag.Members.Count

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
    
        @foreach(Member m in ViewBag.Members)
        {
        <tr>
            <td>@m.Id</td>
            <td>@m.Name</td>
            <td>@m.Email</td>
            <td>@(m.Active ? "Active" : "Inactive")</td>
        </tr>
        }
</table>
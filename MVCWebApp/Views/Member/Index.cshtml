@using MemberDao;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1><i class="fa fa-users"></i>@ViewBag.Title</h1>


<button onclick="ConfirmBeforeSubmit()">Press Me</button>


<a href="/Member/Add"
    class="btn btn-success">
    <i class="fa fa-user-plus"></i>
</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Active</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    
        @foreach(Member m in ViewBag.Members)
        {
        <tr>
            <td><a href="/Member/Detail/@m.Id">@m.Id</a></td>
            <td>@m.Name</td>
            <td>@m.Email</td>
            <td>@(m.Active ? "Active" : "Inactive")</td>
            <td>
                <a 
                    href="/Member/ConfirmDelete/@m.Id" 
                    class="btn btn-danger btn-sm">
                    <i class="fa fa-trash"></i>
                </a>
                <a
                    href="/Member/Edit/@m.Id"
                    class="btn btn-primary btn-sm">
                    <i class="fa fa-edit"></i>
                </a>
            </td>
        </tr>
        }
</table>